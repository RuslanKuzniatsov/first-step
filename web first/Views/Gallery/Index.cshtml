@using web_first.Models
@model IndexGalleryViewModel

@{
    Layout = "/Views/Shared/_LayoutGallery.cshtml";
}
<div>
    Смотри какие есть картинки
</div>
<div>
    <div class = "change_pages">
        @if (Model.Page < 2)
            {
                <div>пред.</div>
            }
        else{<a href="/Gallery/Index?page=@(Model.Page-1)">пред.</a>}
   
    
        <div><a href="/Gallery/Index?page=@(Model.Page+1)">след.</a></div>
     </div>
    @foreach(var image in Model.Images)
    {
        <div>
            <a href="/Gallery/ShowImage?id=@image.Id">@image.Name</a>
        </div>
        
    }
    <div>
            <a href="/Gallery/AddImage">Add Image</a>
        </div>
</div>